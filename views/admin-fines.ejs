<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Fines</title>
    <style>
                @import url('https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap');

body {
    font-family: 'Manrope', sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f0f0f0;
    font-weight: 400;
}

table {
    margin-top: 50px;
    width: 100%;
    border-collapse: collapse;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    background-color: #ffffff;
}

th, td {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 12px;
}

th {
    background-color: #f2f2f2;
}

header {
    background-color: #4CAF50;
    padding: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: white;
}

header h1 {
    font-size: 24px;
    margin: 0;
}

nav {
    display: flex;
    justify-content: space-around;
    align-items: center;
}

nav a {
    color: #fff;
    text-decoration: none;
    padding: 10px 15px;
}

nav img {
    border-radius: 50%;
    width: 40px;
    height: 40px;
    margin-left: 10px;
}

.navbar-line {
    height: 2px;
    background-color: #aaa;
    opacity: 0.25;
}

.new-registration {
    padding: 8px 16px;
    background-color: #5ea6ed;
    color: black;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
    font-weight: 700;
}

.new-registration:hover {
    background-color: #777;
}

/* Edit button */
button[type="submit"].update-btn {
    background-color: #4ea8f1;
    color: white;
    border: none;
    border-radius: 20px;
    padding: 8px 16px;
    cursor: pointer;
    transition: background-color 0.3s;
}

/* Disapprove button */
button[type="submit"].omit-btn {
    background-color: #ff3b30;
    color: white;
    border: none;
    border-radius: 20px;
    padding: 8px 16px;
    cursor: pointer;
    transition: background-color 0.3s;
}
    </style>
</head>
<body>
<header>
    <h1>Admin Fines</h1>
    <nav>
        <a href="/admin-reg">Registrations</a>
        <a href="/admin-fines">Fines</a>
        <a href="/admin-feedback">Feedback</a>
        <button class="new-registration"><a href="new_fine.html">New Fine</a></button>
        <img src="../images/admin-pic.avif" alt="profile-pic">
    </nav>
</header>
<div class="navbar-line"></div>
<table>
    <thead>
    <tr>
        <th>FineID</th>
        <th>Owner Name</th>
        <th>Vehicle Number</th>
        <th>Vehicle Make</th>
        <th>Fine Amount</th>
        <th>Violation</th>
        <th>Update</th>
        <th>Omit</th>
    </tr>
    </thead>
    <tbody>
    <% fines.forEach(fine => { %>
    <tr>
        <td><%= fine.FineID %></td>
        <td><%= fine.OwnerName %></td>
        <td><%= fine.VehicleNumber %></td>
        <td><%= fine.VehicleMake %></td>
        <td>â‚¹<%= fine.FineAmount %></td>
        <td><%= fine.Violation %></td>
        <td>
            <form action="/edit-fine" method="POST">
                <input type="hidden" name="fineID" value="<%= fine.FineID %>">
                <button type="submit" class="update-btn">Update</button>
            </form>
        </td>
        <td>
            <form action="/omit-fine" method="POST">
                <input type="hidden" name="fineID" value="<%= fine.FineID %>">
                <button type="submit" class="omit-btn">Omit</button>
            </form>
        </td>
    </tr>
    <% }); %>
    </tbody>
</table>
</body>
</html>
